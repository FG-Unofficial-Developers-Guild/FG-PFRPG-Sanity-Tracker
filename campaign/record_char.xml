<root>
	<windowclass name="charsheet" merge="join">
		<sheetdata>
			<button_charactivate name="speak">
				<bounds>-41,25,23,22</bounds>
			</button_charactivate>

			<buttoncontrol name="button_sanity">
				<bounds>-41,42,23,22</bounds>
				<icon normal="button_sanity" pressed="button_sanity_down" />
				<script>
					function onInit()
						SanityTracker.updateSanityScore(window.getDatabaseNode())
					end
				
					function onButtonPress()
						Interface.openWindow('charsheet_sanity', window.getDatabaseNode())
					end
				
					function onClickRelease(button, x, y)
						local bFirstClick = DB.getValue(window.getDatabaseNode(), 'sanity.egglock', 1)
					
						if button == 2 and bFirstClick == 1 then
							Interface.openWindow('charsheet_egg', window.getDatabaseNode())
							DB.setValue(window.getDatabaseNode(), 'sanity.egglock', 'number', 0)
						elseif bFirstClick == 0 then
							DB.setValue(window.getDatabaseNode(), 'sanity.egg', 'string', '')
						end
					end
				</script>
			</buttoncontrol>

			<string_labeled name="name">
				<anchored to="overviewframe" position="insidetopleft" offset="15,10" height="20">
					<right offset="-15" />
				</anchored>
				<labelres>char_label_name</labelres>
			</string_labeled>

			<resize_charsheet />
			<close_charsheet />
		</sheetdata>
	</windowclass>
	<!-- Sanity -->
	<windowclass name="charsheet_sanity">
		<frame>charsheethelper</frame>
		<placement>
			<size width="300" height="135" />
		</placement>
		<sizelimits>
			<minimum width="300" height="200" />
			<maximum width="300" height="650" />
			<dynamic />
		</sizelimits>
		<nodelete />
		<playercontrol />
		<sheetdata>
			<windowtitlebar_char name="title">
				<prefix>char_sanity_title</prefix>
			</windowtitlebar_char>
			<anchor_title_charsheethelper name="contentanchor" />

			<frame_char name="sanityframe">
				<anchored to="contentanchor" height="60">
					<top anchor="bottom" relation="relative" offset="0" />
					<left />
					<right />
				</anchored>
			</frame_char>
		
			<basicnumber name="sanityscore" source="sanity.score">
				<anchored to="sanityframe" width="45" height="20">
					<top offset="25" />
					<right anchor="center" offset="-63" />
				</anchored>
				<readonly />
				<min>0</min>
			</basicnumber>
			<label_fieldtop>
				<anchored to="sanityscore" />
				<static textres="char_label_sanityscore" />
			</label_fieldtop>
		
			<basicnumber name="sanityedge" source="sanity.edge">
				<anchored to="sanityscore" width="45" height="20">
					<top offset="0" />
					<left anchor="center" offset="35" />
				</anchored>
				<script>
					function onInit()
						onValueChanged()
					end

					function onValueChanged()
						local nodeSanity = getDatabaseNode().getParent()
						local nSanityDamage = DB.getValue(nodeSanity, 'damage', 0)
						local nSanityEdge = DB.getValue(nodeSanity, 'edge', 0)

						if nSanityDamage ~= 0 and nSanityDamage >= nSanityEdge then
							window.sanitydamage.setColor('FFB22929')
						else
							window.sanitydamage.setColor('FF000000')
						end
					end
				</script>
				<readonly />
				<min>0</min>
			</basicnumber>
			<label_fieldtop>
				<anchored to="sanityedge" />
				<static textres="char_label_sanityedge" />
			</label_fieldtop>
		
			<basicnumber name="sanitythreshold" source="sanity.threshold">
				<anchored to="sanityedge" width="45" height="20">
					<top offset="0" />
					<left anchor="center" offset="35" />
				</anchored>
				<readonly />
				<min>0</min>
			</basicnumber>
			<label_fieldtop>
				<anchored to="sanitythreshold" />
				<static textres="char_label_sanitythreshold" />
			</label_fieldtop>
		
			<basicnumber name="sanitydamage" source="sanity.damage">
				<anchored to="sanitythreshold" width="45" height="20">
					<top offset="0" />
					<left anchor="center" offset="35" />
				</anchored>
				<script>
					function onInit()
						onValueChanged()
					end

					function onValueChanged()
						local nodeSanity = getDatabaseNode().getParent()
						local nSanityDamage = DB.getValue(nodeSanity, 'damage', 0)
						local nSanityEdge = DB.getValue(nodeSanity, 'edge', 0)

						if nSanityDamage >= nSanityEdge then
							window.sanitydamage.setColor('FFB22929')
						else
							window.sanitydamage.setColor('FF000000')
						end
					end
				</script>
				<min>0</min>
				<default>0</default>
			</basicnumber>
			<label_fieldtop>
				<anchored to="sanitydamage" />
				<static textres="char_label_sanitydamage" />
			</label_fieldtop>

			<frame_char name="madnessframe">
				<anchored position="insidetopleft" offset="15,100">
					<right anchor="right" offset="-15" />
					<bottom anchor="bottom" offset="-15" />
				</anchored>
			</frame_char>
			<label_frametop>
				<anchored to="madnessframe" />
				<static textres="char_madness_title" />
			</label_frametop>
			<list_charabilities name="madnesses">
				<anchored to="madnessframe">
					<top offset="30" />
					<left offset="15" />
					<right offset="-20" />
					<bottom offset="-15" />
				</anchored>
				<datasource>.madnesses</datasource>
				<class>char_sanity_madnesses</class>
			</list_charabilities>
			<scrollbar>
				<anchored to="madnesses" />
				<target>madnesses</target>
			</scrollbar>
			<button_iedit name="madnesses_iedit">
				<anchored to="madnesses" position="aboveright" offset="5,0" />
				<target>madnesses</target>
			</button_iedit>
			<button_iadd name="madnesses_iadd">
				<anchored to="madnesses" position="aboveleft" offset="5,0" />
				<target>madnesses</target>
			</button_iadd>
		
			<close_charsheethelper />
			<resize_charsheethelper />
		</sheetdata>
	</windowclass>

	<windowclass name="char_sanity_madnesses">
		<margins control="0,0,0,2" />
		<sheetdata>
			<genericcontrol name="rightanchor">
				<anchored height="0" width="0">
					<top />
					<right />
				</anchored>
			</genericcontrol>
			<button_idelete name="idelete">
				<anchored>
					<top offset="2" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
			</button_idelete>
			<linkcontrol name="shortcut">
				<anchored width="20" height="20">
					<top offset="2" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<class>referencemadness</class>
				<description field="name" />
				<readonly />
			</linkcontrol>
			<string_textlistitem name="name">
				<anchored>
					<top offset="2" />
					<left offset="5" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<multilinespacing>20</multilinespacing>
			</string_textlistitem>
		</sheetdata>
	</windowclass>

	<windowclass name="referencemadness">
		<frame>recordsheet</frame>
		<placement>
			<size width="350" height="350" />
		</placement>
		<sizelimits>
			<minimum width="300" height="300" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<script>
			function onLockChanged()
				if header.subwindow then
					header.subwindow.update();
				end
				
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				text.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<sub_record_header name="header">
				<class>ref_madness_header</class>
			</sub_record_header>

			<frame_record_content />
			<ft_record name="text">
				<anchored to="contentframe" position="over" />
				<footer>footer_wide</footer>
			</ft_record>
			<scrollbar>
				<anchored to="text" />
				<target>text</target>
			</scrollbar>
			
			<resize_recordsheet />
			<close_recordsheet />
		</sheetdata>
	</windowclass>

	<windowclass name="ref_madness_header">
		<margins control="0,0,0,2" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>referencemadness</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_madness" />
			</string_record_name>
			<label_recordtype name="recordtype">
				<static textres="record_label_madness" />
			</label_recordtype>	
		</sheetdata>
	</windowclass>

	<windowclass name="charsheet_egg">
		<frame>charsheethelper</frame>
		<placement>
			<size width="425" height="120" />
		</placement>
		<sizelimits>
			<minimum width="425" height="120" />
			<maximum width="425" height="120" />
			<dynamic />
		</sizelimits>
		<nodelete />
		<playercontrol />
		<sheetdata>
			<windowtitlebar_char name="title">
				<prefix>char_sanity_title</prefix>
			</windowtitlebar_char>
			<anchor_title_charsheethelper name="contentanchor" />

			<frame_char name="eggframe">
				<anchored to="contentanchor" height="55">
					<top anchor="bottom" relation="relative" offset="0" />
					<left />
					<right />
				</anchored>
			</frame_char>

			<stringu name="egg" source="sanity.egg">
				<anchored to="eggframe">
					<top offset="20" />
					<left offset="20" />
					<right offset="20" />
				</anchored>
				<default>Are you feeling alright? I hope so, because there's a lot to come.</default>
				<readonly />
				<nodrag />
			</stringu>
			
			<close_charsheethelper />
			<resize_charsheethelper />
		</sheetdata>
	</windowclass>
</root>
