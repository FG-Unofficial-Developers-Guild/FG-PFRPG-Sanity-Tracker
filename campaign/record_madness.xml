<root>
	<windowclass name="referencemadness">
		<frame>referencepage</frame>
		<placement>
			<size width="400" height="350" />
		</placement>
		<sizelimits>
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<nodelete />
		<playercontrol />
		<sharable />
		<script>
			function onLockChanged()
				if header.subwindow then
					header.subwindow.update()
				end
				if content.subwindow then
					content.subwindow.update()
				end
			end
		</script>
		<sheetdata>
			<sub_ref_header name="header">
				<class>ref_madness_header</class>
			</sub_ref_header>

			<frame_ref_content />
			<sub_ref_content name="content">
				<class>ref_madness_stats</class>
			</sub_ref_content>
			<scrollbar_ref_content />
			
			<resize_referencepage />
			<close_referencepage />
		</sheetdata>
	</windowclass>

	<windowclass name="ref_madness_header">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode())
				name.setReadOnly(bReadOnly)
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>referencemadness</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_madness" />
			</string_record_name>
		</sheetdata>
	</windowclass>
	
	<windowclass name="ref_madness_stats">
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode())
				if bReadOnly then
					madness_type_biglabel.setValue('[' .. madness_type.getValue() .. ']')
					madness_type_biglabel.setVisible(true)
					
					madness_type.update(bReadOnly, true)
				else
					madness_type_biglabel.setVisible(false)
					madness_type.update(bReadOnly)
				end
				details.update(bReadOnly)
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<label_column name="madness_type_biglabel">
				<anchored>
					<top relation="relative" offset="7" />
				</anchored>
				<font>reference-b-large</font>
			</label_column>

			<button_stringcycler name="madness_type">
				<anchored width="105" height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
					<left parent="columnanchor" anchor="center" offset="5" />
				</anchored>
				<parameters>
					<defaultlabelres>madness_type_lesser</defaultlabelres>
					<defaultvalue>L</defaultvalue>
					<labelsres>madness_type_greater</labelsres>
					<values>G</values>
				</parameters>
			</button_stringcycler>
			
			<ft_columnh name="details">
				<font>reference-r</font>
				<empty textres="empty_madness_details" />
			</ft_columnh>
		</sheetdata>
	</windowclass>
</root>
